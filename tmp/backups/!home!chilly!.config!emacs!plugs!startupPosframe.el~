(defun startupPosframe ()
  (interactive)
  (when (posframe-workable-p)
    (posframe-show "*startup*"
                   :string "Welcome Back!"
                   :left-fringe 0
                   :right-fring 0
                   :poshandler 'posframe-poshandler-frame-center
                   :internal-border-width 20
                   :font "Barlow"
                   :font-height 200
                   :background-color darker-bgcolor
                   :foreground calm-fgcolor
                   :internal-border-color darker-bgcolor))
  )


(add-hook 'after-make-frame-functions #'startupPosframe)
(add-hook 'minibuffer-mode-hook (lambda () (interactive) (posframe-delete "*startup*")))

(provide 'startupPosframe)
