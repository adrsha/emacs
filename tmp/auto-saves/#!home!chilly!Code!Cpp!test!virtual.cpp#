#include <future>
#include <iostream>
#include <string>
using namespace std;

class Parent {
private:
  int priv_var = 32;

public:
  Parent() { cout << "Constructor: The Parent" << endl; }
  string public_var = "Parent public var";
  virtual void display() { cout << public_var << endl; };
  ~Parent() { cout << "Distructor: Killed the Parent" << endl; }
};

class Child : public Parent {
  int priv_var = 64;

public:
  Child() { cout << "Constructor: The Child" << endl; }
  string public_var = "Child public var";
  // void display() { cout << public_var << endl; };
  ~Child() { cout << "Destructor: Killed the Child" << endl; }
};

int main(int argc, char *argv[]) {
  Child objChild;
  Parent *parentPtr;
  parentPtr = &objChild;
  parentPtr->display();
  return 0;
}
